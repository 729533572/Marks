<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.yoon.memoria.Posting.PostingActivity">
    <data>
        <variable
            name="activity"
            type="com.yoon.memoria.Posting.PostingActivity">

        </variable>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/postingToolbar"
            android:background="@color/colorPrimary"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:layout_gravity="center"
                android:fontFamily="@font/bold_font"
                android:textColor="@color/white"
                android:textSize="@dimen/profile_nickname_size"/>
        </android.support.v7.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/postingToolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_image"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#000000"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/postEdit"
                    android:layout_below="@id/post_image"
                    android:layout_margin="@dimen/default_padding"
                    android:fontFamily="@font/regular_font"
                    android:hint="글을 입력해주세요"
                    android:background="@null"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_btn"
                    android:text="업로드"
                    android:fontFamily="@font/regular_font"
                    android:layout_below="@+id/postEdit"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:background="@drawable/custom_button"/>
            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>
</layout>