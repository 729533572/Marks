<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="place"
            type="com.yoon.memoria.Model.Place"></variable>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding"
        card_view:cardCornerRadius="6dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_border">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/list_photo_place"
                    android:layout_height="@dimen/list_photo_place"
                    android:layout_margin="@dimen/default_padding"
                    android:id="@+id/place_photo"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_photo_place"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/place_photo"
                    android:layout_marginRight="@dimen/default_padding">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/place_name"
                        android:maxLines="1"
                        android:layout_marginBottom="4dp"
                        android:text="@{place.placeName}"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/place_time"
                        android:maxLines="1"
                        android:layout_marginBottom="4dp"
                        android:text="@{place.detail}"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/place_address"
                        android:text="@{place.address}"/>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</layout>