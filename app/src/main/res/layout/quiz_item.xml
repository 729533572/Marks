<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <data>
        <variable
            name="place"
            type="com.yoon.memoria.Model.Place">

        </variable>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_padding"
        card_view:cardCornerRadius="6dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/default_padding">
                <ImageView
                    android:layout_width="@dimen/list_photo_place"
                    android:layout_height="@dimen/list_photo_place"
                    android:layout_marginBottom="@dimen/default_padding"
                    android:id="@+id/quiz_photo"
                    app:placeId="@{place.placeID}"
                    app:noPic="@{@drawable/ic_wallpaper_black_48dp}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/quiz_name"
                    android:text="@{place.placeName}"
                    android:fontFamily="@font/regular_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_padding"
                    android:id="@+id/quiz_address"
                    android:text="@{place.address}"
                    android:fontFamily="@font/regular_font"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</layout>